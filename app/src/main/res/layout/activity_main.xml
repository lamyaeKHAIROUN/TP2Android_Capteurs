<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">
    <Button
        android:id="@+id/monBouton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="100dp"
        android:insetRight="100dp"
        android:padding="15dp"
        android:text="Sensors list"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="189dp" />

    <Button
        android:id="@+id/monBouton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetLeft="100dp"
        android:insetRight="100dp"
        android:padding="15dp"
        android:text="Sensor Test"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="115dp"
        android:layout_below="@id/monBouton"
        />
        <Button
            android:id="@+id/monBouton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetLeft="100dp"
            android:insetRight="100dp"
            android:padding="15dp"
            android:text="Accelerometer"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="115dp"
            android:layout_below="@id/monBouton2"
            />

        <Button
            android:id="@+id/monBouton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetLeft="100dp"
            android:insetRight="100dp"
            android:padding="15dp"
            android:text="Direction"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="115dp"
            android:layout_below="@id/monBouton3"
            />
        <Button
            android:id="@+id/monBouton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetLeft="100dp"
            android:insetRight="100dp"
            android:padding="15dp"
            android:text="Secouer"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="115dp"
            android:layout_below="@id/monBouton4"
            />

</RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>